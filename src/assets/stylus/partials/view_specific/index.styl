.introduction_and_image
    display flex
    flex-direction column
    width 100%
    padding $sp--double 4vw 0
    +above(4)
        padding $sp--double 0 0 $sp--double

    &__introduction
        +above(4)
            margin-right auto
        padding-right 4vw
        +above(4)
            padding-right $sp--double

        p
            width 48ch
            fz-scale--three()

            a
            a:visited
                trans()
                box-shadow inset 0 0 0 alpha(white, 2%)
                color $cl--anchor

                &:active
                &:focus
                &:hover
                    box-shadow inset 0 -.24em 0 alpha($cl--anchor--interact, 18%)
                    color $cl--anchor--interact

    &__image_figure
        display flex
        align-items center
        justify-content center
        mt($sp--double)
        overflow hidden
        max-width 100%
        +above(4)
            max-height 40rem

    &__image
        flex 0 0 auto
        height auto
        max-height 100%
        width auto
        max-width 100%
        border-left 6px solid $cl--attention

.further_information_and_contact
    padding $sp--double 4vw
    +above(4)
        padding $sp--double

    p
        width 48ch
        fz-scale--three()

    a
    a:visited
        trans()
        box-shadow inset 0 0 0 alpha(white, 2%)
        color $cl--anchor

        &:active
        &:focus
        &:hover
            box-shadow inset 0 -.24em 0 alpha($cl--anchor--interact, 18%)
            color $cl--anchor--interact

.job_title
    font-family $ff--emphasis

.action_anchor
    fz-scale--three()

    &:active
    &:focus
    &:hover
        box-shadow inset 0 -.36em 0 alpha($cl--anchor--interact, 18%)
